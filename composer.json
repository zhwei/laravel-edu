{
    "name": "zhwei/laravel-edu",
    "description": "Laravel Educational Management",
    "keywords": [
        "educational",
        "management",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.3.0",
        "ext-json": "*",
        "barryvdh/laravel-ide-helper": "^2.8",
        "encore/laravel-admin": "^1.8",
        "fideloper/proxy": "~3.3",
        "fruitcake/laravel-cors": "^1.0",
        "laravel/framework": "5.5.*",
        "laravel/passport": "~4.0",
        "laravel/tinker": "~1.0",
        "lcobucci/jwt": "3.3.3",
        "linecorp/line-bot-sdk": "^6.1",
        "pusher/pusher-php-server": "^4.1"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/thanks": "^1.0",
        "zircote/swagger-php": "^3.1"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "ide": [
            "@php artisan ide-helper:eloquent",
            "@php artisan ide-helper:generate .ide-helpers/_ide_helper.php",
            "@php artisan ide-helper:models -p -N -F .ide-helpers/_ide_helper_models.php",
            "@php artisan ide-helper:meta -F .phpstorm.meta.php/generated-ide-helper.php"
        ],
        "build": [
            "php artisan route:cache",
            "php artisan config:cache",
            "php artisan view:clear"
        ],
        "clean": [
            "php artisan route:clear",
            "php artisan config:clear",
            "php artisan view:clear"
        ],
        "reset-database": [
            "rm -rf database/database.sqlite",
            "touch database/database.sqlite",
            "php artisan migrate --force",
            "php artisan passport:install --force",
            "php artisan db:seed --class='\\Encore\\Admin\\Auth\\Database\\AdminTablesSeeder' --force",
            "php artisan db:seed --force"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
